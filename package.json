{
	"private": true,
	"scripts": {
		"dev": "npm run development",
		"development": "mix",
		"watch": "mix watch",
		"watch-poll": "mix watch -- --watch-options-poll=1000",
		"hot": "mix watch --hot",
		"prod": "npm run production",
		"production": "mix --production"
	},
	"devDependencies": {
		"axios": "^0.25",
		"browser-sync": "^2.27.7",
		"browser-sync-webpack-plugin": "^2.3.0",
		"laravel-mix": "^6.0.6",
		"lodash": "^4.17.19",
		"postcss": "^8.1.14",
		"resolve-url-loader": "^5.0.0",
		"sass": "^1.49.7",
		"sass-loader": "^12.6.0",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.5",
		"vue": "^3.2.29",
		"vue-loader": "^17.0.0",
		"vue-router": "^4.0.12"
	},
	"dependencies": {
		"@inagora/wd-view": "^0.0.11",
		"@tinymce/tinymce-vue": "^4.0.6"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"es2021": true
		},
		"globals": {
			"WdView": true,
			"XLSX": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:vue/essential",
			"plugin:@typescript-eslint/recommended",
			"@wd/eslint-config-wd",
			"prettier"
		],
		"parser": "vue-eslint-parser",
		"parserOptions": {
			"ecmaVersion": 12,
			"parser": "@typescript-eslint/parser",
			"sourceType": "module"
		},
		"plugins": [
			"vue",
			"@typescript-eslint"
		],
		"rules": {}
	},
	"prettier": {
		"tabWidth": 2,
		"printWidth": 80,
		"useTabs": true,
		"semi": true,
		"singleQuote": true
	}
}
